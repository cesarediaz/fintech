<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'form-signin', "data-toggle": 'validator', role: 'form'}) do |f| %>
  <h2 class='form-signin-heading'>Please sign in</h2>

  <div class='form-group'>
    <%= f.label :email, class: 'sr-only' %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address', "data-error": 'That email address is invalid', required: true %>
    <div class="help-block with-errors"></div>
  </div>

  <div class='form-group'>
    <%= f.label :password, class: 'sr-only' %><br />
    <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password', "data-minlength": 8 %>
    <div class="help-block with-errors"></div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class='actions'>
    <%= f.submit 'Log in', class: 'btn btn-lg btn-primary btn-block' %>
    <%= render 'devise/shared/links' %>
  </div>
<% end %>
